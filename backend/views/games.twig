{% extends "base.html.twig" %}

{% block css %}
<link rel="stylesheet" href="/css/styles.css">
{% endblock %}  {# Close the css block properly #}

{% block content %}  {# Corrected block declaration #}
    <section class="games-container">
        {% for game in games %}
            <div class="game-card">
                <h2>{{ game.name }}</h2>
                <img src="https://images.igdb.com/igdb/image/upload/t_cover_big/{{ game.cover_image }}.jpg" alt="Imagen del juego" class="cover-image">
                <p>Rating: {{ game.rating }}</p>
                <p>Plataformas: 
                    {% for platform in game.platforms %}
                        {{ platform.name }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
            </div>
        {% endfor %}
    </section>
{% endblock %}  {# Now properly closed #}
